{{page-title "Customer"}}

<h1>Customer Details</h1>

<ul>
    <li>id: {{@model.id}}</li>
    <li>name: {{@model.name}}</li>
    <li>age: {{@model.age}}</li>
    <li>email: {{@model.email}}</li>
</ul>

<button {{on "click" (fn this.deleteCustomer @model.id)}}>Delete</button>
&nbsp;&nbsp;&nbsp;
<LinkTo @route="customer.edit" @model={{@model.id}}>
    Edit this Customer
</LinkTo>
&nbsp;&nbsp;&nbsp;
<LinkTo @route="customers">
    Go Back
</LinkTo>

{{outlet}}